<% readonly = false if local_assigns[:readonly].nil? %>
<%= form_with(model: [:admin, @category], local: true, class: "ms-3 d-flex flex-column justify-content-end") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', readonly: readonly %>
  <% if !readonly %>
    <%= f.submit yield(:button_text), class: "btn btn-primary ms-auto mt-2" %>
  <% end %>
<% end %>