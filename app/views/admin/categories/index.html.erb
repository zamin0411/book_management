<% provide(:title, 'Category Index') %>
<h1>Category Index</h1>
<%= search_form_for @q, url: admin_categories_path, class: "d-flex justify-content-end" do |f| %>
  <%= f.search_field :name_cont, class: "form-control w-50 me-3" %>
  <%= f.submit(class: "btn btn-outline-success") %>
<% end %>
<%= link_to new_admin_category_path, class: "btn btn-outline-success", role: "button" do %>
  <i class="bi bi-plus-circle"></i>New Category
<% end %>
<% if @categories.any? %>
  <table class="table m-2">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <%= render @categories %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @categories %>
  </div>
<% else %>
  <h1>No categories found</h1>
<% end %>
